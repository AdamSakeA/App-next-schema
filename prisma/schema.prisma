generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kategori {
  id        String    @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  Product[]
}

model Product {
  id        String   @id @default(uuid())
  title     String
  price     Int
  desc      String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  kategori  Kategori @relation(fields: [kategoriId], references: [id])
  kategoriId String
}

